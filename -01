counter = 1

while counter <= 10:
    text = input("数字を入力してください")
    
    # if 入力された文字が ''なら
    if text == '':
        print("入力が無効です")
        continue

    # 入力された文字が '999' なら
    if text == '999':
        print("中断します")
        break

    number = int(text)
    print(counter, "回目:", number * number) 
    counter = counter + 1 

print("終了しました")
